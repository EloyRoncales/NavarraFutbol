<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="6dp"
    android:paddingHorizontal="8dp">

    <ImageView
        android:id="@+id/ivEscudoLocal"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/escudo"
        android:layout_marginEnd="4dp"
        android:contentDescription="Escudo local" />

    <TextView
        android:id="@+id/tvEquipoLocal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CD Local"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:00"
        android:paddingHorizontal="8dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvEquipoVisitante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CD Visitante"
        android:gravity="end"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ivEscudoVisitante"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/escudo"
        android:contentDescription="Escudo visitante" />
</LinearLayout>
