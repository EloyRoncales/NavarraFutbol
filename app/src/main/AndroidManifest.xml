<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.navarrafutbol">

    <!-- 1) Permiso para acceder a Internet -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NavarraFutbol">

        <activity
            android:name=".LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity"/>
        <activity android:name=".FiltroCategoriasActivity"/>
        <activity android:name=".RegisterActivity"/>
        <activity android:name=".ResultadosActivity"/>
        <activity android:name=".PerfilActivity"/>
        <activity android:name=".NoticiasActivity"/>
        <activity android:name=".DetalleNoticiaActivity"/>

    </application>
</manifest>
